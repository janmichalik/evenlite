{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Webpack Watch",
      "type": "shell",
      "command": "npm run watch",
      "options": {
        "cwd": "${workspaceFolder}/wp-content/webpack"
      }
    },
    {
      "label": "Settings App",
      "type": "shell",
      "command": "ng serve --port 4200",
      "options": {
        "cwd": "${workspaceFolder}/settings-app"
      }
    },
    {
      "label": "Booking App",
      "type": "shell",
      "command": "ng serve --port 4300",
      "options": {
        "cwd": "${workspaceFolder}/booking-app"
      }
    },
    {
      "label": "Dev All",
      "dependsOn": [
        "Webpack Watch",
        "Settings App",
        "Booking App"
      ],
      "dependsOrder": "parallel"
    }
  ]
}